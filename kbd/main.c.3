uint8_t getKeyPressed( void ) {
    uint8_t bit, keyCode = 0, parityCalc = 0;
    while ( PIND & KBD_CLK ) {}
    if ( PIND & KBD_DATA ) {
        //printf( "ERROR: KBD_DATA START not present\n\r" );
        return KBD_ERROR;
    }
    while ( !(PIND & KBD_CLK) ) {}
    for( uint8_t i = 0; i < 8; i++ ) {
        while ( PIND & KBD_CLK ) {}
        bit = (PIND & KBD_DATA) >> KBD_DATA_SHIFT;
        keyCode |= bit << i;
        parityCalc += bit;
        while ( !(PIND & KBD_CLK) ) {}
    }
    while ( PIND & KBD_CLK ) {}
    bit = (PIND & KBD_DATA) >> KBD_DATA_SHIFT;
    if ( (parityCalc % 2) == bit ) {
        //printf( "ERROR: parity wrong\n\r" );
        return KBD_ERROR;
    }
    while ( !(PIND & KBD_CLK) ) {}
    while ( PIND & KBD_CLK ) {}
    if ( !(PIND & KBD_DATA) ) {
        //printf( "ERROR: KBD_DATA STOP not present\n\r" );
        return KBD_ERROR;
    }
    while ( !(PIND & KBD_CLK) ) {}
    return keyCode;
}

#define SCREEN_LEN  16
void LCD_setPosEx( uint8_t pos ) {
    pos %= SCREEN_LEN;
    if ( pos >= 8 ) {
        pos += (LCD_LINE_2_OFFSET - 8);
    }
    LCD_setAddressDDRAM( pos );
}

